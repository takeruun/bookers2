<%= form_with model: group, local:true do |f| %>
  <%= render 'layouts/errors', obj: group %>
  <div class="form-group">
    <%= f.label :name, 'グループ名' %>
    <%= f.text_field :name, class: "form-control name" %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, '紹介文' %>
    <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>
  <div class="form-group">
    <%= f.label :image, 'グループ画像' %>
    <%= f.file_field :image, class: "form-control-file image", accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-info' %>
  </div>
<% end %>