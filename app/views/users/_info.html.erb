<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th> 
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followed_relationships.count, user_follow_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.follower_relationships.count, user_follower_path(user) %></th>
  </tr>
</table>

<%if user.id == current_user.id %>
  <div class='row'>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<% end %>