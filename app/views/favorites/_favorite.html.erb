<% if book.favorited_by?(current_user) %>
  <%= form_with mode: book, url: book_favorites_path(book),  method: :delete, local: false do |f| %>
    <%= f.submit "♥#{ book.favorites.count}", class: "btn text-danger" %>
  <% end %>
<% else %>
  <%= form_with model: book, url: book_favorites_path(book), method: :post, local: false do |f| %>
    <%= f.submit "♥#{ book.favorites.count}", class: "btn text-primary" %>
  <% end %>
<% end %>

